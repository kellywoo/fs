@using mtopt.logic;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("notice_detailed_content");
    Layout = "~/Views/Shared/mst_main.cshtml";
    news New = ViewBag.New;
}
<div class="mn-container" style="min-height:650px;">
    <div class="content-layout">
        <div class="mn-block asset-certificate-bottom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="~#">@(New.title)</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active">
                    <form class="form-horizontal">
                        <p style="text-align:center;color:#888;">@Basis.Parse.Localization("notice_by")：@(New.author)    @Basis.Parse.Localization("com_time")：@(New.addtime.ToString("yyyy-MM-dd HH:mm"))</p>
                        @Html.Raw(New.content)
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var pck = {
        init: function () {
            m.node(".mn-menu-notice").addClass("active");
        }
    }
    pck.init();
</script>