@using mtopt.logic;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("key51");
    Layout = "~/Views/Shared/mst_main.cshtml";
    //获取数据
    member Member = ViewBag.Member;
}
@section head{
    <style type="text/css">
    </style>
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li><a href="~/User/basicedit">@Basis.Parse.Localization("key45")</a></li>
                        <li class="active"><a href="~/User/basicface">@Basis.Parse.Localization("key52")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal" name="form" method="post" enctype="multipart/form-data" data-ajax="false" action="@Href("~/User/api_basicface_submit")">
                                <div class="row" style="height:10px;">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("key53")</p></div>
                                    <div class="col-xs-4">
                                        <input accept="image/*" id="file" type="file" class="form-control" name="file" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-xs-offset-2"><button type="submit" id="btn_enter" class="btn btn-block btn-orange">@Basis.Parse.Localization("key49")</button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var pck = {
        init: function () {
            /**********************判断返回值***********************/
            if (m.queryString("data") != null) {
                var data = m.json.getObject(m.encry.url.decode(m.queryString("data")));
                switch (m.parse.toInteger(data.error)) {
                    case 0:
                        engine.news("@Basis.Parse.Localization("user_completed_change_info")", 1800);
                        setTimeout(function () { m.redirect("@Href("~/User/basicinfo")"); },1000);
                        break;
                    case -10001:
                        engine.news("@Basis.Parse.Localization("user_failed_change_info")", 1800);
                        break;
                    default:
                        engine.news("@Basis.Parse.Localization("com_connecting_server")", 1800);
                        break;
                }
            }
            m.node(".mn-menu-user").addClass("active");
            m.node(".user-menu-basicedit").addClass("active");
        }
    }
    pck.init();
</script>