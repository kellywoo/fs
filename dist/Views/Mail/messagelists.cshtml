@using mtopt.logic;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("inquiry");
    Layout = "~/Views/Shared/mst_main.cshtml";
    //提取数据
    IEnumerable<message> Messages = ViewBag.Messages;
}
@section head{
    <style type="text/css">
        
    </style>
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">@Basis.Parse.Localization("email_received")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal">
                                <table class="table table-striped table-hover center">
                                    <thead class="mtablehead">
                                        <tr>
                                            <td>@Basis.Parse.Localization("com_number")</td>
                                            <td>@Basis.Parse.Localization("com_status")</td>
                                            <td>@Basis.Parse.Localization("inquiry_category")</td>
                                            <td>@Basis.Parse.Localization("com_title")</td>
                                            <td>@Basis.Parse.Localization("com_time")</td>
                                            <td>@Basis.Parse.Localization("com_dealing")</td>
                                        </tr>
                                    </thead>
                                    <tbody class="record-list">
                                        @foreach (message Message in Messages)
                                        {
                                            <tr>
                                                <td>@Message.id</td>
                                                <td>@Basis.Parse.ToLanguage(Message.message_state.name)</td>
                                                <td>@Basis.Parse.ToLanguage(Message.message_type.name)</td>
                                                <td>@Basis.Parse.ToLanguage(Message.title)</td>
                                                <td>@Message.addtime.ToString("yyyy/MM/dd HH:mm:ss")</td>
                                                <td>
                                                    <a class="btn btn-orange btn-xs" href="@Href("~/Mail/messagedetail?id=" + Message.id)">@Basis.Parse.Localization("com_comment")</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @{
                                    int Selected = Convert.ToInt32(ViewBag.Page) + 1;
                                    int Page = Convert.ToInt32(ViewBag.Count) / Convert.ToInt32(ViewBag.Size) + 1;
                                    int Size = 10;
                                    int PageFirst = 1;
                                    int PageLast = Size;
                                    //整理参数
                                    Page = (Page % 1) != 0 ? ((int)Page / 1) + 1 : Page;
                                    int Index = Size * (int)(Selected / Size);
                                    /****************************是否触发上一页**********************/
                                    if (Selected == PageFirst)
                                    {
                                        Index = Selected - Size + 1;
                                        Index = Index <= 0 ? 1 : Index;
                                    }
                                    /*********************是否触发下一页*****************************/
                                    else if (Selected == PageLast)
                                    {
                                        Index = Selected;
                                        Index = Index > Page ? Page : Index;
                                    }
                                    else
                                    {
                                        if (Selected == 1)
                                        {
                                            Index = 1;
                                        }
                                        else if (Selected == Page)
                                        {
                                            Index = Page - (Page % Size);
                                        }
                                    }
                                    PageFirst = Index;
                                    PageLast = Index + Page - 1;
                                    <center>
                                        <ul class="pagination" style="margin:0px;">
                                            @if (Selected > 1)
                                            {
                                                <li><a href="~/Mail/messagelists?page=@(Selected - 2)" class="btn btn-sm btn-alt">&laquo;</a></li>
                                            }
                                            @for (var i = 0; i < Size && (Index + i) <= Page; i++)
                                            {
                                                if ((Index + i) <= 0 || (Index + i) > Page)
                                                {
                                                    continue;
                                                }
                                                else
                                                {
                                                    //是否为选中标签
                                                    if (Selected == (Index + i))
                                                    {
                                                        <li><a href="~/Mail/messagelists?page=@(Index + i - 1)" class="btn btn-sm btn-alt">@(Index + i)</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="~/Mail/messagelists?page=@(Index + i - 1)" class="btn btn-sm btn-alt">@(Index + i)</a></li>
                                                    }
                                                }
                                            }
                                            @if (Selected < Page - (Page % Size) + 1)
                                            {
                                                <li><a href="~/Mail/messagelists?page=@(Selected)" class="btn btn-sm btn-alt">&raquo;</a></li>
                                            }
                                        </ul>
                                    </center>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--隐藏域开始-->
<input type="hidden" class="HD_PAGE" value="@(ViewBag.Page)" />
<input type="hidden" class="HD_SIZE" value="@(ViewBag.Size)" />
<input type="hidden" class="HD_COUNT" value="@(ViewBag.Count)" />
<!--隐藏域结束-->
<script type="text/javascript">
    var pck = {
        page: 0,
        size: 0,
        count: 0,
        //加载页面
        init: function () {
            m.node(".mn-menu-user").addClass("active");
            m.node(".user-menu-messagelists").addClass("active");
            this.page = mtopt.parse.toInteger(m.node(".HD_PAGE").value());
            this.size = mtopt.parse.toInteger(m.node(".HD_SIZE").value());
            this.count = mtopt.parse.toInteger(m.node(".HD_COUNT").value());
        }
    }
    pck.init();
</script>