@using mtopt.logic;
@using mtopt.model;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("inquiry_title");
    Layout = "~/Views/Shared/mst_main.cshtml";

    MajorBase Entities = new MajorBase(Basis.GetConnect(Em_ConnectType.Image));
}
@section head{
    <style type="text/css">
        
    </style>
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">@Basis.Parse.Localization("inquiry_title")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal" name="form" method="post" enctype="multipart/form-data" action="@Href("~/Mail/api_message_submit")">
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("inquiry_category")</p></div>
                                    <div class="col-xs-4">
                                        <select name="type" class="form-control" id="type">
                                            @foreach (message_type Type in Entities.message_type)
                                            {
                                                <option value="@Type.id">@Basis.Parse.ToLanguage(Type.name)</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("com_title")</p></div>
                                    <div class="col-xs-4">
                                        <input type="text" name="title" class="form-control" id="title">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("inquiry_content")</p></div>
                                    <div class="col-xs-4">
                                        <textarea name="content" class="form-control" id="content" rows="10"></textarea>
                                    </div>
                                </div>

                                <div class="row" style="margin-top:1em;">
                                    <div class="col-xs-2 col-xs-offset-2"><button type="submit" id="btn_enter" class="btn btn-block btn-orange" onclick="return pck.check()">@Basis.Parse.Localization("inquiry_publish")</button></div>
                                    <div class="col-xs-2"><a href="~/Mail/messagelists" class="btn btn-block btn-default">@Basis.Parse.Localization("inquiry_show_list")</a></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var pck = {
        check: function () {
            var title = m.node("#title").value();
            var content = m.node("#content").value();
            if (title.length <= 0) {
                engine.news("@Basis.Parse.Localization("inquiry_enter_title")", 1800);
                return false;
            }
            if (content.length <= 0) {
                engine.news("@Basis.Parse.Localization("inquiry_enter_content")", 1800);
                return false;
            }
            return true;
        }
    }
    m.event("ready").add(function () {
        /**********************判断返回值***********************/
        if (m.queryString("data") != null) {
            var data = m.json.getObject(m.encry.url.decode(m.queryString("data")));
            switch (m.parse.toInteger(data.error)) {
                case 0:
                    engine.news("@Basis.Parse.Localization("inquiry_sent")", 1800);
                    break;
                case -10001:
                    engine.news("@Basis.Parse.Localization("inquiry_failed")", 1800);
                    break;
                default:
                    engine.news("@Basis.Parse.Localization("com_connecting_server")", 1800);
                    break;
            }
        }
        m.node(".mn-menu-user").addClass("active");
        m.node(".user-menu-message").addClass("active");
    });
</script>