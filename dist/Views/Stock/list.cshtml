@using mtopt.logic;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("trade_list");
    Layout = "~/Views/Shared/mst_main.cshtml";
    //提取数据
    IEnumerable<stockmarket_type> StockmarketTypes = ViewBag.StockmarketTypes;
}
@section head{
    <style type="text/css">
        .tab-content>.tab-pane{padding-top:20px}
        .tab-content>.tab-pane.nopadding{padding:0}
        .acount-wrap{margin: 50px 0px;}
        .acount-item{text-align:center;color:#999;padding:50px 0;border-radius:10px;border:1px solid transparent}
        .acount-item:hover{border:1px solid #b6e1ef;background-color:#f9f9f9}
        .acount-item span{display:block}
        .acount-item span.num{font-size:14px;color:#fe3b1c}
        .acount-item span.dec{font-size:14px}
        .acount-wrap{margin:50px 0}
        .acount-item.totle span.num{color:#000;font-weight:700}
        .acount-item-ico{width:80px;height:80px;display:block;margin:0 auto 15px auto;background-size:cover;background-position:center;background-repeat:no-repeat}
    </style>
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">@Basis.Parse.Localization("key22")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal">
                                <div class="form-group acount-wrap">
                                    @foreach (stockmarket_type StockmarketType in StockmarketTypes)
                                    {
                                        <a href="~/Stock/@(ViewBag.Opera)?type=@StockmarketType.id" class="col-xs-3">
                                            <div class="acount-item">
                                                <span class="acount-item-ico" style="background: url(@(StockmarketType.icon)) no-repeat center;"></span>
                                                <span class="num">@(StockmarketType.today_price_new.ToString("0.00"))</span>
                                                <span class="dec">@(Basis.Parse.ToLanguage(StockmarketType.name))<br>（@(StockmarketType.code)）</span>
                                            </div>
                                        </a>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" class="HD_ORDER" value="@(ViewBag.Order)" />
<script type="text/javascript">
    var pck = {
        init: function () {
            m.node(".mn-menu-user").addClass("active");
        }
    }
    pck.init();
</script>

