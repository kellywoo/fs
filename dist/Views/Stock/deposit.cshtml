@using mtopt.logic;
@using mtopt.model;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("depocoin_title");
    Layout = "~/Views/Shared/mst_main.cshtml";
    //提取数据
    stockmarket_account Account = ViewBag.Account;
    stockmarket_type StockmarketType = ViewBag.StockmarketType;
}
@section head{
    <style type="text/css">
    </style>
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">@Basis.Parse.Localization("depocoin_title")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal">
                                @if (StockmarketType.deposit_artificial == true)
                                {
                                    <div class="alert alert-danger alert-bac" role="alert">
                                        <p>1.@Basis.Parse.ToLanguage("转入是自动的，@(StockmarketType.name)转账需要整个网络进行确认，达到一定确认后您的@(StockmarketType.name)会自动充值到您的账户中")</p>

                                        <p>2.@Basis.Parse.Localization("depocoin_help1")</p>

                                        <p>3.@Basis.Parse.Localization("depocoin_hep2")</p>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="panel-heading">@Basis.Parse.Localization("com_wallet_address")</div>
                                        <div class="panel-body" style="text-align:center;color:#181818">
                                            @Account.address
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-bac" role="alert">
                                        <p>1.@Basis.Parse.Localization("key43")</p>

                                        <p>2.@Basis.Parse.Localization("depocoin_hep2")</p>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="panel-heading">@Basis.Parse.Localization("com_wallet_address")</div>
                                        <div class="panel-body" style="text-align:center;color:#181818">
                                            @StockmarketType.deposit_address
                                        </div>
                                    </div>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var pck = {
        init: function () {
            m.node(".mn-menu-user").addClass("active");
            m.node(".user-menu-stockdeposit").addClass("active");
        }
    }
    pck.init();
</script>