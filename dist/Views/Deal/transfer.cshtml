@using mtopt.logic;
@using mtopt.model.EntitySales;
@using mtopt.rte.Encrypt;
@{
    ViewBag.Title = Basis.Parse.Localization("key0");
    Layout = "~/Views/Shared/mst_main.cshtml";
    //��ȡ����
    
    member Member = ViewBag.Member;
}
@section head{
    <style type="text/css">
    </style>
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">@Basis.Parse.Localization("key1")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal">
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("key2")</p></div>
                                    <div class="col-xs-4"><input id="memberid" type="text" class="form-control" placeholder="A000000" /></div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("key3")</p></div>
                                    <div class="col-xs-4">
                                        <select id="type" class="form-control">
                                            <option value="1">@Basis.Parse.Localization("key4")</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("key5")</p></div>
                                    <div class="col-xs-4"><input id="money" type="text" class="form-control" placeholder="@Basis.Parse.Localization("key4")��@(Member.member_level.transfer_rate)" /></div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-2"><p class="mn-label right">@Basis.Parse.Localization("key6")</p></div>
                                    <div class="col-xs-4"><input id="remarks" type="text" class="form-control" placeholder="@Basis.Parse.Localization("key6")" /></div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-xs-offset-2"><a id="btn_enter" class="btn btn-block btn-orange">@Basis.Parse.Localization("key7")</a></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var pck = {
        menuid: "user",
        title: "@Basis.Parse.Localization("key0")",
        submit: function () {
            var memberid = m.node("#memberid").value();
            var type = m.node("#type").value();
            var money = m.node("#money").value();
            var remarks = m.node("#remarks").value();
            if (memberid.length <= 0) {
                engine.news("@Basis.Parse.Localization("key8")", 1800);
                return;
            }
            engine.ajax.check.member(memberid, function () {
                if (type <= 0) {
                    engine.news("@Basis.Parse.Localization("key9")", 1800);
                    return;
                }
                if (money.length <= 0) {
                    engine.news("@Basis.Parse.Localization("key10")", 1800);
                    return;
                }
                engine.news("@Basis.Parse.Localization("key11")", 9999, 6);
                //��������
                var ajax = m.ajax("@Href("~/Deal/api_transfer_submit")", null, function (jso) {
                    var jso = m.json.getObject(jso);
                    switch (jso.Error) {
                        case 0:
                            engine.news("@Basis.Parse.Localization("key12")", 99999, 6);
                            setTimeout(function () {
                                m.redirect("@Href("~/Deal/")" + jso.Data + ".html");
                            }, 1000);
                            break;
                        case -10000:
                            engine.news("@Basis.Parse.Localization("key13")", 1800);
                            break;
                        default:
                            engine.news(jso.Data, 2000);
                            break;
                    }
                });
                ajax.data.add("memberid", memberid);
                ajax.data.add("type", type);
                ajax.data.add("money", money);
                ajax.data.add("remarks", remarks);
                ajax.send();
            });
        },
        init: function () {
            m.node(".mn-menu-user").addClass("active");
            m.node(".user-menu-transfer").addClass("active");
        }
    }
    pck.init();
    $(function () {
        m.node("#btn_enter").click(pck.submit);
    });
</script>