@using System.Data;
@using mtopt.logic;
@using mtopt.model.EntitySales;
@{
    ViewBag.Title = Basis.Parse.Localization("com_assets_list");
    Layout = "~/Views/Shared/mst_main.cshtml";
    //提取数据
    IEnumerable<member_deal> Deals = ViewBag.Deals;
}
<div class="mn-container">
    <div class="row">
        <div class="col-xs-2">
            @{ Html.RenderPartial("~/Views/Shared/ctl_menu_user.cshtml"); }
        </div>
        <div class="col-xs-10">
            <div class="content-layout">
                <div class="mn-block asset-certificate-bottom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#">@Basis.Parse.Localization("com_assets_list")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <form class="form-horizontal">
                                <table class="table table-striped table-hover center">
                                    <thead class="mtablehead">
                                        <tr>
                                            <td>@Basis.Parse.Localization("com_time")</td>
                                            <td>@Basis.Parse.Localization("com_title")</td>
                                            <td>@Basis.Parse.Localization("com_status")</td>
                                            <td>@Basis.Parse.Localization("com_cash_amount")</td>
                                            <td>@Basis.Parse.Localization("com_dealing")</td>
                                        </tr>
                                    </thead>
                                    <tbody class="record-list">
                                        @foreach (member_deal Deal in Deals)
                                        {
                                            <tr>
                                                <td>@Deal.addtime.ToString("yyyy.MM.dd HH:mm")</td>
                                                <td style="text-align:left">
                                                    @(Basis.Parse.ToLanguage(Deal.member_deal_type.name))
                                                    @if (Deal.title.Length > 0)
                                                    {
                                                        @Basis.Parse.ToLanguage(Deal.title)
                                                    }
                                                </td>
                                                @if (Deal.state == 4 || Deal.state == 5)
                                                {
                                                if (Deal.type == 1 || Deal.type == 3 || Deal.type == 5 || Deal.type == 8 || Deal.type == 9 || Deal.type == 11 || Deal.type == 17 || Deal.type == 23)
                                                {
                                                        <td>
                                                            +@(Deal.money.ToString("0.00"))
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            -@(Deal.money.ToString("0.00"))
                                                        </td>
                                                    }
                                                }
                                                else
                                                {
                                                    if (Deal.type == 1 || Deal.type == 3 || Deal.type == 5 || Deal.type == 8 || Deal.type == 9 || Deal.type == 11 || Deal.type == 17 || Deal.type == 23)
                                                    {
                                                        <td>
                                                            +@(Deal.money.ToString("0.00"))
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            -@(Deal.money.ToString("0.00"))
                                                        </td>
                                                    }
                                                }
                                                <td>@(Basis.Parse.ToLanguage(Deal.member_deal_state.name))</td>
                                                <td><a href="@Href(Basis.Url.ToDealUrl(Deal.id))">@Basis.Parse.Localization("deal_show_details")</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @{
                                    int Selected = Convert.ToInt32(ViewBag.Page) + 1;
                                    int Page = Convert.ToInt32(ViewBag.Count) / Convert.ToInt32(ViewBag.Size) + 1;
                                    int Size = 10;
                                    int PageFirst = 1;
                                    int PageLast = Size;
                                    //整理参数
                                    Page = (Page % 1) != 0 ? ((int)Page / 1) + 1 : Page;
                                    int Index = Size * (int)(Selected / Size);
                                    /****************************是否触发上一页**********************/
                                    if (Selected == PageFirst)
                                    {
                                        Index = Selected - Size + 1;
                                        Index = Index <= 0 ? 1 : Index;
                                    }
                                    /*********************是否触发下一页*****************************/
                                    else if (Selected == PageLast)
                                    {
                                        Index = Selected;
                                        Index = Index > Page ? Page : Index;
                                    }
                                    else
                                    {
                                        if (Selected == 1)
                                        {
                                            Index = 1;
                                        }
                                        else if (Selected == Page)
                                        {
                                            Index = Page - (Page % Size);
                                        }
                                    }
                                    PageFirst = Index;
                                    PageLast = Index + Page - 1;
                                    <center>
                                        <ul class="pagination" style="margin:0px;">
                                            @if (Selected > 1)
                                            {
                                                <li><a href="~/Deal/list?page=@(Selected - 2)" class="btn btn-sm btn-alt">&laquo;</a></li>
                                            }
                                            @for (var i = 0; i < Size && (Index + i) <= Page; i++)
                                            {
                                                if ((Index + i) <= 0 || (Index + i) > Page)
                                                {
                                                    continue;
                                                }
                                                else
                                                {
                                                    //是否为选中标签
                                                    if (Selected == (Index + i))
                                                    {
                                                        <li><a href="~/Deal/list?page=@(Index + i - 1)" class="btn btn-sm btn-alt active">@(Index + i)</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="~/Deal/list?page=@(Index + i - 1)" class="btn btn-sm btn-alt">@(Index + i)</a></li>
                                                    }
                                                }
                                            }
                                            @if (Selected < Page - (Page % Size) + 1)
            {
                                                <li><a href="~/Deal/list?page=@(Selected)" class="btn btn-sm btn-alt">&raquo;</a></li>
                                            }
                                        </ul>
                                    </center>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--隐藏域开始-->
<input type="hidden" class="HD_TYPE" value="@ViewBag.Type" />
<input type="hidden" class="HD_STATE" value="@ViewBag.State" />
<input type="hidden" class="HD_PAGE" value="@ViewBag.Page" />
<input type="hidden" class="HD_SIZE" value="@ViewBag.Size" />
<input type="hidden" class="HD_COUNT" value="@ViewBag.Count" />
<input type="hidden" class="HD_TIMESTART" value="@(ViewBag.TimeStart)" />
<input type="hidden" class="HD_TIMEEND" value="@(ViewBag.TimeEnd)" />
<!--隐藏域结束-->
<script type="text/javascript">
    var pck = {
        init: function () {
            m.node(".mn-menu-user").addClass("active");
            m.node(".user-menu-list").addClass("active");
        }
    }
    pck.init();
</script>